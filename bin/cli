#!/usr/bin/env node
'use strict';

const twilio = require('../lib');
const updateNotifier = require('update-notifier');
const pkg = require('../package.json');

// Checks for available update and returns an instance
updateNotifier({pkg}).notify();

twilio
  .then(() => {
    process.exit(0);
  })
  .catch(err => {
    console.log(err);
    process.exit(1);
  });
